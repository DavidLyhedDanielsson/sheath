        <PrivateAssets>all</PrivateAssets>
      </PackageReference>
      <PackageReference Include="Optional" Version="4.0.0" />
      <PackageReference Include="sdl2.nuget" Version="2.28.2" />
      <PackageReference Include="Silk.NET.Maths" Version="2.17.1" />
