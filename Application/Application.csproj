      <None Remove="Src\Graphics\shader\vs\vertex.hlsl" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Asset\Prop\phone.bin">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Asset\Prop\phone.gltf">
